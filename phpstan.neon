includes:
	- vendor/szepeviktor/phpstan-wordpress/extension.neon

parameters:
	level: 5
	paths:
		- includes/
		- post-kinds-for-indieweb.php
	excludePaths:
		- vendor/
		- node_modules/
		- build/
		- tests/
		- ~/
		# Temporarily excluded - needs refactoring, causes memory exhaustion
		- includes/admin/class-api-settings.php
		- includes/class-rest-api.php
		- includes/admin/class-settings-page.php
		- includes/class-import-manager.php
	bootstrapFiles:
		- vendor/autoload.php
	parallel:
		maximumNumberOfProcesses: 1
		processTimeout: 600.0
	ignoreErrors:
		# Allow dynamic method calls on WordPress objects
		- '#Call to an undefined method [a-zA-Z0-9\\_]+::[a-zA-Z0-9\\_]+\(\)#'
		# Ignore undefined WordPress functions that may not be stubbed
		- '#Function [a-z_]+ not found\.#'
