{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "post-kinds-indieweb/checkin-dashboard",
	"version": "1.0.0",
	"title": "Check-in Dashboard",
	"category": "post-kinds-indieweb",
	"icon": "location",
	"description": "Display a dashboard of your check-ins with grid, map, and timeline views.",
	"keywords": [ "checkin", "location", "foursquare", "map", "dashboard" ],
	"textdomain": "post-kinds-for-indieweb",
	"attributes": {
		"layout": {
			"type": "string",
			"default": "grid"
		},
		"showMap": {
			"type": "boolean",
			"default": true
		},
		"showStats": {
			"type": "boolean",
			"default": true
		},
		"limit": {
			"type": "number",
			"default": 12
		},
		"showFilters": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"html": false,
		"align": [ "wide", "full" ],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"viewScript": "file:./view.js",
	"render": "file:./render.php"
}
